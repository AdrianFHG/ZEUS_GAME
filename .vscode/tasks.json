{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build raylib",
            "type": "shell",
            "command": "C:/msys64/ucrt64/bin/gcc.exe",
            "args": [
                "src/main.c",
                "-Iinclude",
                "-Llib",
                "-lraylibdll",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-o",
                "build/main.exe"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
